# Environment variables for authenticated MCP server
# Copy this to .env and customize for your environment

# Redis Configuration
MCP_REDIS_URL=redis://localhost:6379
# For production with authentication:
# MCP_REDIS_URL=redis://:your_password@redis.example.com:6379
# For Redis Cluster:
# MCP_REDIS_URL=redis://node1:7000,node2:7000,node3:7000

# Server Configuration
MCP_SERVER_NAME={{project-name}}
MCP_TELEMETRY_LEVEL=info
MCP_TELEMETRY_FORMAT=pretty

# Optional: Override transport via environment
# MCP_SERVER_TRANSPORT=stdio
# Or for HTTP streaming:
# MCP_SERVER_TRANSPORT_HTTP_STREAMING_PORT=8080

# Database Configuration (if using database feature)
# MCP_DATABASE_URL=sqlite:///tmp/{{project-name}}.db
# MCP_DATABASE_MAX_CONNECTIONS=10

# Development/Testing
# Set to 'true' to enable debug logging
DEBUG=false
# Set to 'test' to use test Redis database
ENVIRONMENT=development